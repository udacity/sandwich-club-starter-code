<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextFormat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_top_margin</item>
        <item name="android:layout_marginStart">@dimen/text_start_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_left_margin</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
